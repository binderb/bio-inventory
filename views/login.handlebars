<div class="container-fluid p-4">
  <div class="row">
    <div class="col-12 d-flex align-items-center flex-column text-center pb-3">
    <img class="pb-3" src="/images/logo.png" style="height: 100px;"/>
    <h2 class="fw-light">
      {{title}}
    </h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
      <div class="container-fluid bg-secondary rounded">
        <div class="row p-2 justify-content-between align-items-center">
        </div>
        <div class="row">
          <div class="col-12 p-4 pt-1">
            <form id="login-form">
              <div class="mb-3">
                <label
                  for="username"
                  class="form-label fw-bold"
                >Username:</label>
                <input type="text" class="form-control" id="username" />
              </div>
              <div class="mb-3">
                <label
                  for="password"
                  class="form-label fw-bold"
                >Password:</label>
                <input type="password" class="form-control" id="password" />
              </div>
              <div class="d-flex align-items-center">
                <button
                  type="submit"
                  id="submit"
                  class="btn btn-primary"
                >Submit</button>
                <div
                  id="err"
                  class="p-2 m-0 form-text text-danger text-center"
                ></div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>